ENTITY contralador IS
	PORT(h0  : IN BIT_VECTOR(3 DOWNTO 0); -- unidade das horas
		  h1  : IN BIT_VECTOR(3 DOWNTO 0); -- dezena das horas
		  m0  : IN BIT_VECTOR(3 DOWNTO 0); -- unidade dos minutos
		  m1  : IN BIT_VECTOR(3 DOWNTO 0); -- dezena dos minutos
		  clk : IN BIT;
		  cln : OUT BIT_VECTOR(3 DOWNTO 0)); -- cln(0) -> unidade dos minutos, cln(1) -> dezenas dos minutos
														 -- cln(2) -> unidade das horas, cln(3) -> dezena das horas
		  
END controladorHoras;
-------------------------------------------------------------------------------------------------------------------------
ARCHITECTURE behavior OF controlador IS
BEGIN
	PROCESS(h0, h1, m0, m1, clk)
	BEGIN	
		IF(clk'EVENT AND h0 = "0011" AND h1 = "0010" AND m0 = "1001" AND m1 = "0101") THEN --se o relogio marca 23h59
			cln <= (OTHERS => '0'); --zera todos os registradores
		ELSE IF(clk'EVENT AND m1 = "0101" AND m0 = "1001") THEN
			cln <= "0011"; --zera os registradores de minutos
		ELSE IF(clk'EVENT AND m0 = "1010") THEN
			cln <= "0001"; --zera a dezena do minuto sempre que chegar em 9
		ELSE
			cln <= "1111"; -- desativa todos os clears
		END IF;
	END PROCESS;
END behavior;
		
			
	